{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Electron Main Process",
            "program": "${workspaceFolder}/src/main/index.ts",
            "runtimeExecutable": "electron",
            "runtimeArgs": [
                "-r",
                "dotenv/config",
                "-r",
                "ts-node/register",
                "-r",
                "tsconfig-paths/register"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "NODE_ENV": "development"
            },
            "sourceMaps": true,
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"]
        }
    ]
}