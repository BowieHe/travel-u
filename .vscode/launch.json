{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug API (ts-node)",
            "program": "${workspaceFolder}/src/main/web-server.ts",
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "-r",
                "dotenv/config",
                "-r",
                "ts-node/register",
                "-r",
                "tsconfig-paths/register"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "NODE_ENV": "development",
                "VITE_IS_WEB": "true"
            },
            "sourceMaps": true,
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"]
        }
    ],
    "compounds": [
        {
            "name": "Debug Full Stack (Web)",
            "configurations": ["Debug API (ts-node)"],
            "preLaunchTask": "Start Vite (Web)"
        }
    ]
}
