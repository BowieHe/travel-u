{
	"version": "0.2.0",
	"configurations": [
		{
            "type": "node",
            "request": "launch",
            "name": "Debug Electron Main (Build First)",
            "program": "${workspaceFolder}/node_modules/.bin/electron",
            "args": [
                "--inspect=9229",
                "--remote-debugging-port=9222",
                "${workspaceFolder}/out/main/index.js"
            ],
            "cwd": "${workspaceFolder}",
            "sourceMaps": true,
            "console": "integratedTerminal",
            "outputCapture": "std",
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**"
            ],
            "runtimeArgs": [
                "--inspect-brk=9229"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "windows": {
                "program": "${workspaceFolder}/node_modules/electron/dist/electron.exe"
            },
            "preLaunchTask": "build:main"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Electron Main (Dev Mode)",
            "program": "${workspaceFolder}/node_modules/.bin/electron",
            "args": [
                "--inspect=9229",
                "--remote-debugging-port=9222",
                "."
            ],
            "cwd": "${workspaceFolder}",
            "sourceMaps": true,
            "console": "integratedTerminal",
            "outputCapture": "std",
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**"
            ],
            "runtimeArgs": [
                "--inspect-brk=9229"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "windows": {
                "program": "${workspaceFolder}/node_modules/electron/dist/electron.exe"
            }
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Electron Main",
            "port": 9229,
            "restart": true,
            "sourceMaps": true,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "${workspaceFolder}",
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**"
            ]
        },
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Current Test File (Vitest)",
			"program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
			"args": ["run", "${file}"],
			"smartStep": true,
			"sourceMaps": true,
			"skipFiles": [
				"<node_internals>/**",
				"${workspaceFolder}/node_modules/**"
			],
			"cwd": "${workspaceFolder}",
			"console": "integratedTerminal"
		}
	],
	"compounds": [
		{
			"name": "Debug Electron (All)",
			"configurations": [
				"Debug Electron Main (Build First)"
			],
			"stopAll": true
		}
	]
}
