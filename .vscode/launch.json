{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Current Vitest File",
			"program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
			"args": ["run", "${file}"],
			"smartStep": true,
			"skipFiles": [
				"<node_internals>/**",
				"${workspaceFolder}/node_modules/**"
			],
			"console": "integratedTerminal",
			"cwd": "${workspaceFolder}"
		}
	]
}
