{
	"compilerOptions": {
		"target": "es2022",
		"module": "commonjs",
		"moduleResolution": "node",
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"types": ["node"],
		"resolveJsonModule": true,
		"outDir": "./dist",
		"sourceMap": true,
		"inlineSourceMap": false,
		"inlineSources": false,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
